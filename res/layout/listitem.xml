<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@drawable/itembg"
    android:orientation="vertical" >
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
       	android:layout_height="match_parent"
       	android:layout_marginBottom="5dip"
        >
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/iv_mark" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            />
    </FrameLayout>
    <LinearLayout 
        android:id="@+id/ll_a"
        android:layout_toRightOf="@id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创业发展与法律关系"
        android:layout_weight="1"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <ImageView
        android:id="@+id/iv_look"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/a_look"
        />
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="5dip"
        android:text="12"
        android:layout_alignParentRight="true"
        />
    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_source" 
        android:layout_alignLeft="@id/ll_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_a"
        android:text="来源：XXXXXXXXXX"
        android:textSize="10dip"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tv_time" 
        android:layout_alignLeft="@id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_source"
        android:text="时间：XXXX—XX-XX"
        android:textSize="10dip"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tv_address" 
        android:layout_alignLeft="@id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:text="地址：XXXXXXXX"
        android:textSize="10dip"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <ImageView
        android:id="@+id/iv_zan"
        android:layout_alignBottom="@id/frame" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/frame"
        android:background="@drawable/a_join1"
        android:layout_marginLeft="30dip"
        />

        <TextView
            android:id="@+id/tv_wantjoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_zan"
            android:layout_alignBottom="@id/iv_zan" 
            android:textSize="11sp"
            android:layout_marginLeft="3dip"
            android:text="10" />

 
    
    <ImageView
        android:id="@+id/iv_comment"
        android:layout_alignBottom="@id/frame" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_wantjoin"
        android:background="@drawable/a_comment1"
        android:layout_marginLeft="40dip"
        />
    <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_comment"
            android:layout_alignBottom="@id/iv_comment" 
            android:textSize="11sp"
            android:layout_marginLeft="3dip"
            android:text="10" />

</RelativeLayout>
