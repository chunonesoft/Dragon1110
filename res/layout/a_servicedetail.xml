<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rlTopBarContainer"
        android:layout_width="match_parent"
        android:layout_height="45dp" >
        <include layout="@layout/a_title" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_kind"
        android:layout_below="@id/rlTopBarContainer"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/a_rectangle" 
        android:layout_marginTop="30dip"
        android:textSize="18sp"
        android:gravity="right|center"
        android:text="法律与税务"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" 
        android:layout_below="@+id/btn_kind"
        android:layout_marginTop="30dip"
        android:layout_margin="10dip"
        >
        <CheckBox
            android:id="@+id/cb_cname"
            
            style="@style/tab_rb_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/a_save3s"
            android:layout_gravity="right" 
            />
        <LinearLayout
            android:id="@+id/lla"
            android:layout_marginLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >
            <ImageView
                android:id="@+id/iv_companyname"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/a_companyname"
                />
            
           <TextView
            android:id="@+id/tv_vcname"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" 
            android:textSize="16dip"
            android:paddingTop="3dip"
            android:layout_marginLeft="5dip"
            android:text="公司名称："
            /> 
            <TextView
            android:id="@+id/tv_companyname"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" 
            android:paddingTop="3dip"
            android:textSize="16dip"
            android:layout_marginLeft="5dip"
            android:text="chunsoft软件开发有限公司"
            /> 
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/llb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="20dip"
            android:layout_marginLeft="10dip"
            >
            <ImageView
                android:id="@+id/iv_crange"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/a_bussiness"
                />
            
           <TextView
            android:id="@+id/tv_vcbusiness"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" 
            android:textSize="16dip"
            android:paddingTop="3dip"
            android:layout_marginLeft="5dip"
            android:text="业务范围："
            /> 
            <TextView
            android:id="@+id/tv_cbusiness"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" 
            android:paddingTop="3dip"
            android:textSize="16dip"
            android:layout_marginLeft="5dip"
            android:text="软件开发"
            /> 
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="20dip"
            android:layout_marginLeft="10dip"
            >
            <ImageView
                android:id="@+id/iv_cadress"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/a_location"
                />
            
           <TextView
            android:id="@+id/tv_vcadress"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" 
            android:textSize="16dip"
            android:paddingTop="3dip"
            android:layout_marginLeft="5dip"
            android:text="公司地址："
            /> 
            <TextView
            android:id="@+id/tv_cadress"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" 
            android:paddingTop="3dip"
            android:textSize="16dip"
            android:layout_marginLeft="5dip"
            android:text="浙江省杭州市"
            /> 
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginLeft="10dip"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="30dip"
            >
            <ImageView
                android:id="@+id/iv_cphone"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:background="@drawable/a_phone"
                />
            
           <TextView
            android:id="@+id/tv_vcphone"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" 
            android:textSize="16dip"
            android:paddingTop="3dip"
            android:layout_marginLeft="5dip"
            android:text="联系电话："
            /> 
            <TextView
            android:id="@+id/tv_cphone"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content" 
            android:paddingTop="3dip"
            android:textSize="16dip"
            android:layout_marginLeft="5dip"
            android:text="0519-87654321"
            /> 
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
