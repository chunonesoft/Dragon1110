<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rltitleinsider"
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/titleinside" />

     </RelativeLayout>
     <LinearLayout
         android:id="@+id/ll1"
         android:layout_height="wrap_content"
         android:layout_width="match_parent" 
         android:orientation="horizontal"
         >
         <EditText
        android:id="@+id/et_name"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_phone_bg"
        android:hint="手机号/邮箱"
        android:inputType="text"
        android:textSize="16sp"
        
        android:padding="5dp" 
        />
         <Button
             android:id="@+id/btn_sendcheck"
             android:layout_width="wrap_content"
             android:layout_height="40dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="20dip"
             android:text="获取验证码" 
             android:textColor="@color/white"
             android:background="@drawable/btn_login_selector"
             android:layout_weight="0"
             />
     </LinearLayout>
 

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="建议你填写正确的手机号或邮箱，方便在忘记密码时，修改密码"
        android:textColor="@color/gray_font"
        android:textSize="14sp" />
 	 <EditText
        android:id="@+id/et_checknum"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:background="@drawable/register_phone_bg"
        android:hint="验证码"
        android:maxLength="16"
        android:inputType="textPassword"
        android:padding="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="填写注册手机号/邮箱收到的验证码"
        android:textColor="@color/gray_font"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:background="@drawable/register_phone_bg"
        android:hint="密码"
        android:maxLength="16"
        android:inputType="textPassword"
        android:padding="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="密码由6-16位字母，数字或下划线组成,不能是9位以下纯数字组成"
        android:textColor="@color/gray_font"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/et_apwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:background="@drawable/register_phone_bg"
        android:hint="密码"
        android:maxLength="16"
        android:inputType="textPassword"
        android:padding="5dp" />

    <Button
        android:id="@+id/register_complete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dip"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_login_selector"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp" />
    

     
</LinearLayout>
