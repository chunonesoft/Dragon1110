<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    <com.dlam.ui.TitleLayout     
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.dlam.ui.TitleLayout>
    <ScrollView 
        android:id="@+id/sv"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
    <LinearLayout 
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
               android:id="@+id/tv_title"
               android:text="活动标题"
               android:gravity="center"
               android:textSize="24sp"
               android:layout_height="wrap_content"
               android:layout_width="match_parent"
               />
        <LinearLayout
            android:id="@+id/ll_11"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
            >
            <TextView 
               android:id="@+id/tv_hold"
               android:text="举办方："
               android:textSize="12sp"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginLeft="10dip"
               android:singleLine="true"
               android:ellipsize="end"
               />
            <TextView 
               android:id="@+id/tv_pub_time"
               android:text="发布时间："
               android:textSize="12sp"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginLeft="20dip"
               android:singleLine="true"
               android:ellipsize="end"
               />
        </LinearLayout>
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#DEDFE0" />
        <LinearLayout
            android:id="@+id/ll_ac_time"
            android:layout_width="match_parent"
            android:layout_height="30dip" 
            android:orientation="horizontal"
            >
            <ImageView 
                android:id="@+id/iv_time"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a_time"
                android:layout_marginLeft="10dip"
                />
            <TextView
            android:id="@+id/tv_ac_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2015-7-10 15：00：00"
            android:textSize="12sp" 
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:layout_marginLeft="10dip"
            />
        </LinearLayout>
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#DEDFE0" />
        <LinearLayout
            android:id="@+id/ll_ac_place"
            android:layout_width="match_parent"
            android:layout_height="30dip" 
            android:orientation="horizontal"
            >
            <ImageView 
                android:id="@+id/iv_place"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a_place"
                android:layout_marginLeft="10dip"
                />
        <TextView
            android:id="@+id/tv_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp" 
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="10dip"
            android:layout_gravity="center_vertical"
            />
        </LinearLayout>
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#DEDFE0" />
        <LinearLayout
            android:id="@+id/ll_ac_joinnum"
            android:layout_width="match_parent"
            android:layout_height="30dip" 
            android:orientation="horizontal"
            >
            <ImageView 
                android:id="@+id/iv_joinnum"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a_joinnum"
                android:layout_marginLeft="10dip"
                />
        <TextView
            android:id="@+id/tv_joinnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="12sp" 
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="10dip"
            android:layout_gravity="center_vertical"
            />
        </LinearLayout>
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#DEDFE0" />
         <ImageView
               android:id="@+id/iv_pic"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_marginTop="15dip"
               android:layout_height="wrap_content"
               />
           <TextView
               android:id="@+id/tv_content"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:singleLine="false"
               android:layout_marginLeft="5dip"
               android:layout_marginRight="5dip"
               android:text="" 
               />
           
           <TextView
                   android:id="@+id/tv_wantjoin"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dip"
                   android:textSize="20sp"
                   android:layout_margin="5dip"
                   android:text="想参加：" />
           <com.dlam.ui.ListScrollView
               android:id="@+id/lv_people"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:dividerHeight="2dip" 
               android:layout_marginTop="5dip"
               />
        
    </LinearLayout>
    </ScrollView>
    <LinearLayout 
        android:id="@+id/ll_bottom"
        android:layout_height="40dip"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        
        >
       <CheckBox
            android:id="@+id/cb1"
            style="@style/tab_rb_style"
            android:background="@drawable/a_wantjoins"
            android:layout_marginLeft="30dip"
            />
        
	    <CheckBox
            android:id="@+id/cb2"
            style="@style/tab_rb_style"
            android:layout_marginLeft="40dip"
            android:background="@drawable/a_save2s" />
	    
		<CheckBox
            android:id="@+id/cb3"
            style="@style/tab_rb_style"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/a_reminds"/>
	
    </LinearLayout>
</LinearLayout>
